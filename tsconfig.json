{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "experimentalDecorators": true,

        "noImplicitAny": false,
        "removeComments": true,
        
        "sourceMap": true,
        "inlineSources": true,
        "inlineSourceMap": true,
        
        "declaration": true,
        "declarationDir": "./typings"
    },
    "exclude": [
        "node_modules"
    ]
}