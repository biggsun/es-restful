{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "experimentalDecorators": true,

        "noImplicitAny": false,
        "noUnusedParameters": true,
        "noUnusedLocals": true,

        "removeComments": true,
        "sourceMap": true,
        
        "declaration": true,
        "declarationDir": "./typings"
    },
    "exclude": [
        "node_modules",
        "test",
        "typings"
    ]
}