{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "experimentalDecorators": true,

        "noImplicitAny": false,
        "noUnusedLocals": true,
        "sourceMap": true,

        "declaration": true,
        "declarationDir": "./typings"
    },
    "exclude": [
        "node_modules",
        "typings",
        "tests"
    ]
}